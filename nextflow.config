        executor$sge.pollInterval = '1min'
        executor$sge.queueStatInterval = '2min'

        params.ref_dir = "/ifs/data/sequence/results/external/NYU/snuderllab/ref"

        env.ANNOVAR_DIR = "/ifs/data/molecpathlab/bin/annovar"
